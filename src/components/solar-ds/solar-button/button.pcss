:host {
  --blackAlpha: rgba(61, 61, 61, 0.94);
  --whiteAlpha: rgba(255, 255, 255, 0.94);
}

/* Primary */
button {
  background-color: var(--axpo-red);
  border: 1px solid transparent;
  color: white;
  padding: 11px 24px;
  text-align: center;
  text-decoration: none;
  display: inline-block;
  font-size: 16px;
  line-height: 16px;
  margin: 0 4px;
  cursor: pointer;
  border-radius: 32px;
  box-sizing: border-box;
  text-transform: capitalize;
  font-weight: 600;

  &:hover {
    background-color: var(--axpo-red-interaction);
  }

  &.small {
    font-size: 12px;
    padding: 8px 16px;
  }

  &.medium {
    font-size: 14px;
  }
}

/* Outlined variant */
button.outlined {
  background: none;
  border: 1px solid var(--axpo-red);
  color: var(--axpo-red);

  &:hover {
    background: var(--axpo-red);
    border-color: var(--axpo-red);
    color: var(--whiteAlpha);
  }
}

button.secondary {
  background: none;
  border: 1px solid var(--axpo-gray-dark);
  color: var(--blackAlpha);

  &:hover {
    background: var(--axpo-gray-dark);
    color: var(--whiteAlpha);
  }
}



button.success {
  background-color: var(--solar-success);
}

button.success:hover {
  background-color: var(--solar-success);
}

button.danger {
  background-color: var(--solar-danger);
}

button.danger:hover {
  background-color: var(--solar-danger);
}